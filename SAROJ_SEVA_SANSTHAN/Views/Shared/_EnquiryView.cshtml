@using (Html.BeginForm("Enquiry", "Home", FormMethod.Post,
                                new { enctype = "multipart/form-data" }))
{
    <fieldset>
        <legend><h5>SAROJ SEVA SANSTHAN ENQUIRY</h5></legend>
        <div class="form-group has-info">
            <label class="control-label">Name</label>
            <input type="text" id="txtName" name="txtName" value="" class="form-control " placeholder="Enter full name" required="">
            <div class="clearfix"></div>
        </div>
        <div class="form-group has-info">
            <label class="control-label">Mobile No</label>
            <input type="number" name="txtPopMobileNo" id="txtPopMobileNo" value="" class="form-control" maxlength="10" placeholder="Enter mobile" required="">
            <div class="clearfix"></div>
        </div>
        <div class="form-group has-info">
            <label class="control-label">Email Id</label>
            <input type="email" name="txtEmailID" id="txtEmailID" value="" class="form-control " placeholder="Enter email" required="">
            <div class="clearfix"></div>
        </div>
        <div class="form-group has-info">
            <label class="control-label">Address</label>
            <textarea name="txtAddress" id="txtAddress" class="form-control " placeholder="Enter Address" required=""></textarea>
            <div class="clearfix"></div>
        </div>
        <div class="form-group has-info">
            <label class="control-label">Subject</label>
            <textarea name="txtMessage" id="txtMessage" rows="3" class="form-control" placeholder="Enter your message" required=""></textarea>
            <div class="clearfix"></div>
        </div>
        <div class="row-fluid">
            <div style="text-align:center;">
                <button type="submit" class="btn btn-primary btn-social "> <i class="fa fa-share-square-o" aria-hidden="true"></i> SUBMIT </button>
            </div>
        </div>
    </fieldset>
}